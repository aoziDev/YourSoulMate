<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/space1"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/tv_input_fingerprint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
  		android:paddingTop="20dp"
        android:background="#000000"
        android:text="@string/your_soulmate_is"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textSize="20sp"
        android:paddingTop="10dp"
    	android:layout_weight="1"
        />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#787E7EBD"
        android:gravity="center"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:textColor="#FFFFFFFF"
        android:textSize="15sp" />

    <include layout="@layout/layout_fingerprint_scanner" />

    <include layout="@layout/layout_ad" />

</LinearLayout>